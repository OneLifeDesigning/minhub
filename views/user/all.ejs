<div class="row">
  <div class="col-12">
    <% if (users) { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.lastname %></td>
              <td><%= user.email %></td>
              <td><a href="/users/show/<%= user._id %>" class="btn btn-success"><i class="fa fa-eye"></i></a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
    
  </div>
</div>