<div class="row">
  <div class="col-12 col-md-8 col-lg-9">
    <h1>Create new user</h1>
    <form action="/doregister" method="POST" class="form-row"  enctype="multipart/form-data">
      <% if (errors.general) { %>
        <div class="col-12 alert alert-danger">
          <p class="mb-0 text-center"><%= errors.general.message %></p>
        </div>
      <% } %>
      <div class="form-group col-12">
        <label for="email">Email <sup class="text-danger">*</sup></label>
        <input type="email" class="form-control<% if (errors.email) { %> is-invalid<% } %>" id="email" name="email" <% if (user.email) { %>value="<%= user.email %>" <% } %> required>
        <% if (errors.email) { %>
          <div class="invalid-feedback">
            <%= errors.email.message %>
          </div>
        <% } %>
      </div>
      <div class="form-group col-12">
        <label for="password">Password <sup class="text-danger">*</sup></label>
        <input name="password" type="password" class="form-control" <% if (errors.password) { %> is-invalid<% } %> id="password" <% if (user.password) { %>value="<%= user.password %>" <% } %> required>
        <% if (errors.password) { %>
          <div class="invalid-feedback">
            <%= errors.password.message %>
          </div>
        <% } %>
      </div>
      <hr>
      <div class="form-group col-md-6">
        <label for="name">Name <sup class="text-danger">*</sup></label>
        <input type="text" class="form-control <% if (errors.name) { %> is-invalid<% } %>" id="name" name="name" <% if (user.name) { %>value="<%= user.name %>" <% } %> required>
        <% if (errors.name) { %>
          <div class="invalid-feedback">
            <%= errors.name.message %>
          </div>
        <% } %>
      </div>
      <div class="form-group col-md-6">
        <label for="lastname">Last name <sup class="text-danger">*</sup></label>
        <input type="text" class="form-control <% if (errors.lastname) { %> is-invalid<% } %>" id="lastname" name="lastname" <% if (user.lastname) { %>value="<%= user.lastname %>" <% } %> required>
        <% if (errors.lastname) { %>
          <div class="invalid-feedback">
            <%= errors.lastname.message %>
          </div>
        <% } %>
      </div>
      <div class="form-group col-12">
        <label for="username">Username <sup class="text-danger">*</sup></label>
        <input type="text" class="form-control <% if (errors.username) { %> is-invalid<% } %>" id="username" name="username" <% if (user.username) { %>value="<%= user.username %>" <% } %> required>
        <% if (errors.username) { %>
          <div class="invalid-feedback">
            <%= errors.username.message %>
          </div>
        <% } %>
      </div>
      <div class="form-group col-12">
        <label>Avatar</label>
        <div class="input-group mb-2">
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="avatar" name="avatar">
            <label class="custom-file-label" for="avatar">Choose file</label>
          </div>
        </div>
      </div>
      <div class="form-group col-12">
        <label>Profile Image</label>
        <div class="input-group mb-2">
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="profileImage" name="profileImage">
            <label class="custom-file-label" for="profileImage">Choose file</label>
          </div>
        </div>
      </div>
      <div class="col-md-12 col-lg-8">
        <div class="custom-control custom-checkbox mb-3">
          <input type="checkbox" class="custom-control-input <% if (errors.terms) { %> is-invalid<% } %>" name="terms" id="terms">
          <label class="custom-control-label" for="terms">I accept terms</label>
          <% if (errors.terms) { %>
            <div class="invalid-feedback">
              <%= errors.terms.message %>
            </div>
          <% } %>
        </div>
      </div>
      <div class="form-group col-md-12 col-lg-4">
        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </div>
    </form>
  </div>
  <div class="col-12 col-md-4 col-lg-3">
    <h2 class="text-center">Do you have a user?</h2>
    <a href="/login" class="btn btn-danger btn-block">Login</a>
  </div>
</div>