<% if (project) { %>
  <div class="row">
    <div class="col-12 col-sm-8 col-md-7">
      <div class="card">
        <img src="<%= project.image %>" class="card-img-top" alt="<%= project.name %>">
        <div class="card-body">
          <h5 class="card-title"><%= project.name %></h5>
          <p class="card-text">
            <%= project.description %><br>
            <%= project.owner.name %><br>
            <%= project.owner.email %><br>
          </p>
          <% if (project.attachment.length !== 0) { %>
            <hr>
            <% if (app.locals.helpers.getType(project.attachment, 'gallery').length !== 0) { %>
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">  
                <% app.locals.helpers.getType(project.attachment, 'gallery').forEach(function(attachment){ %>
                    <div class="carousel-item">
                      <img src="<%= attachment.src %>" class="d-block w-100" alt="<%= attachment.name %>">
                    </div>
                <% }) %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
              </div>
            <% } %>
          <% } else { %>
            <% app.locals.helpers.getNoType(project.attachment, 'gallery').forEach(function(attachment){ %>
              <p class="card-text">
                <%= attachment.name %><br>
                <%= attachment.src %><br>
              </p>
              <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </div>
<% } %>