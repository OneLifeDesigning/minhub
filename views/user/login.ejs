<div class="row">
  <div class="col-12 col-md-8 col-lg-9">
    <h1>Login </h1>
    <% if (success) { %>
      <div class="alert alert-success">
        <p class="mb-0"><%= success %> </p>
      </div>
    <% } %>
    <form action="/dologin" method="POST">
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" <% if (user.email) { %>value="<%= user.email %>"<% } %>>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input name="password" type="password" class="form-control" id="password">
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
  <div class="col-12 col-md-4 col-lg-3">
    <h2 class="text-center">Do you need to create a user?</h2>
    <a href="/register" class="btn btn-danger btn-block">Register</a>
  </div>
</div>